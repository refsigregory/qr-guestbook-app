generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      String
  createdAt DateTime @default(now())
}

model Guest {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  createdAt   DateTime  @default(now())
  accessCodes AccessCode[]
  logs        Logs[]
}

model AccessCode {
  id        Int      @id @default(autoincrement())
  guestId   Int
  code      String
  expiredAt DateTime?
  createdAt DateTime @default(now())
  guest     Guest    @relation(fields: [guestId], references: [id])
}

model Logs {
  id            Int      @id @default(autoincrement())
  guestId       Int
  accessCode    String
  status        String?
  createdAt     DateTime @default(now())
  guest         Guest    @relation(fields: [guestId], references: [id])
}